{
    "expo": {
        "name": "utility-app-native",
        "slug": "utility-app-native",
        "version": "1.0.0",
        "orientation": "portrait",
        "scheme": "jose-jerez-utility-app",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "icon": {
                "light": "./assets/logos/ios-light.png",
                "dark": "./assets/logos/ios-dark.png",
                "tinted": "./assets/logos/ios-tinted.png"
            },
            "bundleIdentifier": "com.jose.jerez.utilityapp"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/logos/adaptive-icon.png",
                "monochromeImage": "./assets/logos/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "package": "com.jose.jerez.utilityapp",
            "permissions": [
                "android.permission.RECORD_AUDIO",
                "android.permission.MODIFY_AUDIO_SETTINGS"
            ],
            "intentFilters": [
                {
                    "action": "VIEW",
                    "autoVerify": true,
                    "data": [
                        {
                            "scheme": "https",
                            "host": "utility-app-web.vercel.app",
                            "pathPrefix": "/"
                        }
                    ],
                    "category": [
                        "BROWSABLE",
                        "DEFAULT"
                    ]
                }
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "single",
            "favicon": "./assets/logos/logo-1"
        },
        "plugins": [
            "expo-router",
            "expo-secure-store",
            "expo-localization",
            "expo-audio",
            [
                "expo-video",
                {
                    "supportsBackgroundPlayback": true,
                    "supportsPictureInPicture": true
                }
            ],
            [
                "expo-splash-screen",
                {
                    "backgroundColor": "#ffffff",
                    "image": "./assets/logos/splash-icon-dark.png",
                    "dark": {
                        "image": "./assets/logos/splash-icon-light.png",
                        "backgroundColor": "#282a36"
                    },
                    "imageWidth": 200
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        },
        "associatedDomains": [
            "applinks:utilityappnative.com"
        ],
        "extra": {
            "router": {},
            "eas": {
                "projectId": "df402022-caa0-4f39-b91b-a4937a33fc9d"
            }
        }
    }
}
